{
  "name": "rainbow-utils",
  "version": "0.9.0",
  "description": "Rainbow 的前端业务代码工具库",
  "main": "dist/rainbow-utils.min.js",
  "directories": {},
  "scripts": {
    "commitmsg": "commitlint -E HUSKY_GIT_PARAMS",
    "test": "jest",
    "dev": "cross-env NODE_ENV=development webpack",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "build": "cross-env NODE_ENV=production webpack -p",
    "coverage": "jest --coverage",
    "report": "open ./coverage/lcov-report/index.html",
    "upload-coverage": "jest --coverage && codecov -f ./coverage/coverage-final.json"
  },
  "unpkg": "dist/rainbow-utils.min.js",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{html,md,json}": [
      "prettier --write",
      "git add"
    ],
    "test/*.{js}": [
      "prettier --write",
      "npm run test",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rainbow-design/rainbow-utils.git"
  },
  "keywords": [
    "utils",
    "rainbow",
    "function",
    "tool"
  ],
  "author": "yanyue404",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rainbow-design/rainbow-utils/issues"
  },
  "homepage": "https://github.com/rainbow-design/rainbow-utils#readme",
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "babel-jest": "^26.1.0",
    "codecov": "^3.7.1",
    "cross-env": "^7.0.2",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "nyc": "^15.1.0",
    "open": "^7.1.0",
    "prettier": "^2.0.5",
    "terser-webpack-plugin": "^3.0.7",
    "vuepress": "^1.5.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {}
}
